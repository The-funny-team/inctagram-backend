{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../../",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleDirectories": [
    "<rootDir>/../",
    "node_modules"
  ],
  "moduleNameMapper": {
    "^@gateway/(.*)$": "<rootDir>/$1",
    "^@libs/(.*)$": ".<rootDir>/../../libs/$1"
  },
  "testTimeout": 15000
}
