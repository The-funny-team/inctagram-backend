{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "testEnvironment": "node",
  "testRegex": ".e2e.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleDirectories": ["<rootDir>/", "node_modules"],
  "moduleNameMapper": {
    "^@gateway/(.*)$": "<rootDir>/$1",
    "^@libs/(.*)$": ".<rootDir>/../../libs/$1",
    "^@app/core(|/.*)$": "<rootDir>/../../libs/core/src/$1"
  },
  "testTimeout": 15000
}
