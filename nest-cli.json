{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "compilerOptions": {
    "plugins": [
      "@nestjs/swagger"
    ],
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "apps/gateway/tsconfig.app.json",
    "assets": [
      {
        "include": "**/*.hbs",
        "watchAssets": true
      },
      {
        "include": "**/assets/**/*.jpeg",
        "watchAssets": true
      }
    ]
  },
  "monorepo": true,
  "root": "apps/",
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "subscription-app": {
      "type": "application",
      "root": "apps/inctagram-subscription",
      "entryFile": "main",
      "sourceRoot": "apps/inctagram-subscription/src",
      "compilerOptions": {
        "tsConfigPath": "apps/inctagram-subscription/tsconfig.app.json"
      }
    },
    "storage": {
      "type": "application",
      "root": "apps/storage",
      "entryFile": "main",
      "sourceRoot": "apps/storage/src",
      "compilerOptions": {
        "tsConfigPath": "apps/storage/tsconfig.app.json"
      }
    },
    "notifier": {
      "type": "application",
      "root": "apps/notifier",
      "entryFile": "main",
      "sourceRoot": "apps/notifier/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notifier/tsconfig.app.json"
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    }
  }
}